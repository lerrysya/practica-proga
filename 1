#include <stdio.h>

int main() {
    int t1, t2, t3;
    float time;

    printf("Введіть три значення:\n");
    scanf("%d %d %d", &t1, &t2, &t3);

   
    if (t1 > 10000 || t2 > 10000 || t3 > 10000 || t1 <= 0 || t2 <= 0 || t3 <= 0) {
        printf("Помилка! Введіть число, яке не перевищує 10000 і є натуральним числом!\n");
        return 1;
    }

    
    time = 1.0 / ((1.0 / t1) + (1.0 / t2) + (1.0 / t3));

    printf("Час, необхідний для з'їдання пирога: %.2f годин\n", time);

    return 0;
}
