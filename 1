#include <stdio.h>

double time_to_eat_pie(double t1, double t2, double t3) {
    double total_rate = (1.0 / t1) + (1.0 / t2) + (1.0 / t3);
    double total_time = 1.0 / total_rate;
    return total_time;
}

int main() {
    double t1, t2, t3;
    printf("Введіть три числа t1, t2, t3: ");
    scanf("%lf %lf %lf", &t1, &t2, &t3);

    double result = time_to_eat_pie(t1, t2, t3);
    printf("Час, необхідний для з'їдання пирога: %.2f годин\n", result);

    return 0;
}
